{
  "version": 2,
  "projects": [
    {
      "src": "apps/web",
      "use": "@vercel/static-build",
      "builds": [
        { "src": "apps/web/package.json", "use": "@vercel/static-build" }
      ],
      "buildCommand": "npm install && npm run build",
      "outputDirectory": "apps/web/dist",
      "env": {
        "VITE_API_URL": "https://your-laravel-api.vercel.app/api"
      }
    },
    {
      "src": "apps/api/public/index.php",
      "use": "@vercel/php",
      "builds": [
        { "src": "apps/api/artisan", "use": "@vercel/php" }
      ],
      "routes": [
        { "src": "/api/(.*)", "dest": "apps/api/public/index.php" }
      ],
      "env": {
        "APP_ENV": "production",
        "APP_KEY": "base64:xxxx",
        "APP_DEBUG": "false",
        "DB_CONNECTION": "mongodb",
        "DB_DSN": "mongodb+srv://<user>:<pass>@cluster.mongodb.net/myapp_mileapp"
      }
    }
  ]
}
